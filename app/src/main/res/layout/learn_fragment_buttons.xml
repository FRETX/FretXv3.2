<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.adnet.tapvstap.MainActivity"
    android:orientation="vertical">


    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/start_button"
        android:text="Ex 1: Hold Your Guitar"
        android:id="@+id/btExerciseOne"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/start_button"
        android:text="Ex 2: Open Strings"
        android:id="@+id/btExerciseTwo"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/start_button"
        android:text="Ex 3: Notes"
        android:id="@+id/btExerciseThree"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/start_button"
        android:text="Ex 4: Redemption Song"
        android:id="@+id/btExerciseFour"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp" />

</LinearLayout>
